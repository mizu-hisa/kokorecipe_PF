
  <div class="offset-1 mt-5">
    <h4 class="text-center"><%= @customer.customer_name %>さんの会員情報編集</h4>
  </div>

<div class='container px-10 offset-4'>
  <div class="row">
    <div class="col">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
        <div class="row">
          <div class="col-2 mt-5">会員ID</div>
          <div class="mx-3 mt-5"><%= @customer.id %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">Name</div>
          <div class="col-3 mx-1 mt-4">
            <%= f.text_field :customer_name, autofocus: true, id:"customer_name", placeholder:"Name", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">退会ステータス</div>
            <div class="col-3 mx-1 mt-4">
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会　　" %>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効" %>
            </div>
        </div>

        <div class="row">
          <div class="col-2 mt-4"></div>
            <div class="col-3 mt-4 btn-lg">
              <strong><%= f.submit "変更を保存", class: 'btn btn-success btn-lg '%></strong>
          </div>
        </div>
    <%end%>
      </div>
    </div>
  </div>