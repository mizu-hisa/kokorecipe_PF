<h2 class="text-center mt-5">プロフィール編集</h2>

<div class="container mt-3">
  <div class="row offset-4">
    <%= form_with model: @customer do |f| %>
    
      <label for="inputName">Name</label>
      <p><%= f.text_field :user_name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
      
      <label for="inputImage">ProfileImage</label>
      <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
      
      <p><%= f.submit "変更を保存" %></p>
      <%= link_to '退会する', customers_is_deleted_path, class: "btn btn-danger btn-sm" %>
      
    <% end %>
  </div>
</div>