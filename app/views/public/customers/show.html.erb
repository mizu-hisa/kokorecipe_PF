<div class="row mt-5 ml-2">
  <div class="col-5 ml-5">
    <p class="text-center pl-5 mt-3"><%= image_tag @customer.get_profile_image(100,100) %>
  </div>
  <div class="col-2 text-left mt-3">
    <% if @customer == current_customer %>
      <p>Name：<%= @customer.customer_name %></p>
      <p><%= link_to "プロフィール編集", customers_my_page_edit_path %></p>
    <% end %>
  </div>

  <div class="col offset-1 mt-4">
    <p><%= link_to "フォロー一覧", followings_path %></p>
    <p><%= link_to "フォロワー一覧", followers_path %></p>
  </div>
</div>

<div class="container">
  <% @recipes.each do |recipe| %>
    <div class="row mt-5 mb-5">
      <div class="col text-center">
        <p><%= image_tag recipe.get_image(300,300) %></p>
      </div>
      <div class="col mt-5">
        <p>Menu：<%= recipe.title %></p>
        <p>Recipe：<%= recipe.detail %></p>
        <p>投稿日：<%= recipe.created_at.strftime('%Y/%m/%d') %></p>
          <%= link_to "編集", edit_recipe_path(recipe.id) %>
          <%= link_to "削除", recipe_path(recipe.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </div>
      </div>
    </div>
  <% end %>
</div>