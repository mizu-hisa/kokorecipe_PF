<div class="row mt-5 ml-2">
  <div class="col ml-5">
    <p class="text-center pl-5"><%= image_tag @recipe.customer.get_profile_image(100,100) %>
  </div>
  <div class="col text-left mt-3">
    <p>Name：<%= @recipe.customer.customer_name %></p>
      <% if @customer == current_customer %>
     <p><%= link_to "プロフィール編集", edit_customer_path(@customer) %></p>
      <% end %>
  </div>
</div>

<div class="container">
  <% @recipes.each do |recipe| %>
    <div class="row mt-5">
      <div class="col text-center">
        <p><%= image_tag recipe.get_image(300,300) %></p>
      </div>
      <div class="col mt-5">
        <p>Menu：<%= recipe.title %></p>
        <p>Recipe：<%= recipe.detail %></p>
        <p>投稿日：<%= @recipe.created_at.strftime('%Y/%m/%d') %></p>
          <%= link_to "編集", edit_recipe_path(@recipe.id) %>
          <%= link_to "削除", recipe_path(@recipe.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </div>
      </div>
    </div>
  <% end %>
</div>