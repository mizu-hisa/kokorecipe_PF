<% if current_customer.email != 'guest@example.com' %>
  <% if current_customer != customer %>
    <% if current_customer.following?(customer) %>
      <%= link_to "フォロー外す", relationships_path(customer_id: customer.id), method: :delete %><br>
    <% else %>
      <%= link_to "フォローする", relationships_path(customer_id: customer.id), method: :post %><br>
    <% end %>
  <% end %>
<% end %>
<div class="row mt-3">
  　フォロー　<%= customer.followings.count %><br>
  　フォロワー　<%= customer.followers.count %>
</div>