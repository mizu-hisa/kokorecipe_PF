<h1 class="text-center">編集画面</h1>
<div class="container center-block pl-5">
  <div class="row offset-4 text-center">
      <%= form_with model: @recipe do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title %>

          <h4>本文</h4>
          <%= f.text_area :detail %>
          <h4>画像</h4>
          <%= f.file_field :image, accept: "image/*" %><br>
          <p class="mt-3"><%= f.submit '保存' %></p>
        <% end %>
  </div>
</div>