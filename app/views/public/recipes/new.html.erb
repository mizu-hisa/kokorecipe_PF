<h3 class="text-center mt-5">Recipe</h3>
  <div class="container center-block pl-5">
    <div class="row offset-4 text-center">
      <%= form_with model: @recipe do |f| %>
      <div class="form-group">
        <h5 class="mt-3">Menu</h5>
          <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h5 class="mt-3">Recipe</h5>
          <%= f.text_area :detail %>
      </div>
      <div class="form-group">
        <h5 class="mt-3">Image</h5>
          <%= f.file_field :image, accept: "image/*" %><br><br>
      </div>
        <%= f.submit '投稿', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>