<div class="container">
  <div class="row offset-1 mt-5">
    <div class="col">
      <%= image_tag @recipe.get_image(250,200) %>
      <div class="mt-3"><%= render 'comment', recipe: @recipe, recipe_comment: @recipe_comment, customer: @customer %></div>
    </div>
    <div class="col-4 mt-5">
      <p>タイトル：<%= @recipe.title %></p>
      <p>レシピ詳細：<%= @recipe.detail %></p>
      <p>投稿日：<%= @recipe.created_at.strftime('%Y/%m/%d') %></p>
      <div id="favorite_buttons_<%=@recipe.id%>">
        <%= render 'iine', recipe: @recipe %>
      </div>
    </div>
    <div class="col mt-5">
      <p class="text-center"><%= image_tag @recipe.customer.get_profile_image(70,70) %>
      <p class="text-center">Name：<%= @recipe.customer.customer_name %></p>
      <p><%= render "follow", customer: @customer %></p>
    </div>
    <div class="col mt-5">
      <p class="mt-5">自己紹介</p>
      <p class="mt-3"><%= @recipe.customer.introduction %></p>
    </div>
  </div>
</div>