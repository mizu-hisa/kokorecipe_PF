<% if current_customer.email != 'guest@example.com' %>
  <% if current_customer != customer %>
    <% if current_customer.following?(customer) %>
      <%= link_to "フォロー外す", relationships_path(customer_id: customer.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", relationships_path(customer_id: customer.id), method: :post %>
    <% end %>
  <% end %>
<% end %>
<p class="text-center"><%= customer.followings.count %></p><p>フォロー</p>
<p class="text-center"><%= customer.followers.count %></p><p>フォロワー</p>