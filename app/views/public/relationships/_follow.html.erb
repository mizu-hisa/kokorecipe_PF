
<% if current_customer != customer%>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー外す", relationships_path(customer_id: customer.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", relationships_path(customer_id: customer.id), method: :post %>
  <% end %>
  <% else %>
    <p class="text-center"><%= current_customer.followings.count %></p><p>フォロー</p>
    <p class="text-center"><%= current_customer.followers.count %></p><p>フォロワー</p>
<% end %>


